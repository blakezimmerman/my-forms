{
    "compilerOptions": {
      "sourceMap": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "lib": ["es2017", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "allowJs": true,
      "jsx": "react",
      "baseUrl": "./src"
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules"]
}
